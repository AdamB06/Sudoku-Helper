<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx/23.0.1"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.abezard.sudokuHelper.controller.SudokuController"
      spacing="10"
      alignment="CENTER"
      prefWidth="600" prefHeight="600"
      VBox.vgrow="ALWAYS">

    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <children>
        <GridPane fx:id="sudokuGrid"
                  maxWidth="1.7976931348623157E308" maxHeight="1.7976931348623157E308"
                  VBox.vgrow="ALWAYS"/>

        <HBox alignment="CENTER" spacing="10">
            <Button text="Get Hint"/>
            <Button text="Submit" onAction="#onSubmitClicked"/>
            <Button text="Solution" onAction="#onRevealSolution"/>
            <Button text="New Easy Sudoku" fx:id="newEasyButton" onAction="#onNewEasyClicked"/>
            <Button text="New Hard Sudoku" fx:id="newHardButton" onAction="#onNewHardClicked"/>
        </HBox>
    </children>
</VBox>
